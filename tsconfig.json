{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "ui/*": ["ui/*"],
      "helpers/*": ["helpers/*"],
      "data/*": ["data/*"]
    }
  },
  "exclude": ["./node_modules", "./dist"]
}
